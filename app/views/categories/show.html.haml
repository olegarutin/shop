.text-center.row{ data: { controller: 'categories', categories_id_value: @category.id } }
  %h1
    = @category.title
  .d-flex.ms-5
    = select_tag :sort, options_for_select(['Low-price', 'High-price', 'From A to Z', 'From Z to A'], selected: params[:sort]), data: { remote: true, url: category_path }, class: 'form-select w-25 ms-5 me-4'
    = form_with model: @category, method: 'get', class: 'd-flex' do |f|
      = f.number_field :range_start, required: true, placeholder: 'min', class: 'form-select w-25'
      = f.number_field :range_end, required: true, placeholder: 'max', class: 'form-select mx-4 w-25'
      = f.submit 'Find all', class: 'btn btn-outline-success'
  = render 'products/product', products: @products
